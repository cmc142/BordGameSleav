<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href='https://fonts.google.com/specimen/Mukta+Vaani' rel='stylesheet' type='text/css'>

    <link href="~/Content/Style/CSS/Main.css" rel="stylesheet" />
    <link href="~/Content/Style/Fonte/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav>
            <div class="col-4">
                <span class="logo">
                    <a href="@Url.Action("Index", "Home", new { Area = "" })">
                        <img src="~/Content/Images/logo-bgs.png" />
                    </a>
                </span>
            </div>

            <div class="centermenu col-8 ">
                @Html.ActionLink("Forside", "Index", "Default")
                @Html.ActionLink("Størrelser", "Index", "Stoerrelses")
                @Html.ActionLink("Varer", "Index", "Vares")
            </div>
        </nav>
</header>
    <main>
        <h1>@ViewBag.Title</h1>

        @RenderBody()


        <script src="~/Scripts/jquery-3.1.1.min.js"></script>

        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script>
    $(function () {

        jQuery.validator.addMethod('tjekfortegn', function (value, element, params) {
            if (value.match('^[^<>%]*$')) {
                return true;
            }
            return false;
        }, '');

        jQuery.validator.unobtrusive.adapters.add('tjekfortegn', function (options) {
            options.rules['tjekfortegn'] = {};
            options.messages['tjekfortegn'] = options.message;
        });

    }(jQuery));
        </script>
    </main>
</body>
</html>